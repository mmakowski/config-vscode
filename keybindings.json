// attempting to use similar key bindings to Linux
[
    { "key": "cmd+shift+g",          "command": "workbench.view.scm" },
    { "key": "cmd+shift+down",       "command": "editor.action.moveLinesDownAction",
                                     "when": "editorTextFocus && !editorReadonly" },
    { "key": "cmd+shift+up",         "command": "editor.action.moveLinesUpAction",
                                     "when": "editorTextFocus && !editorReadonly" },
    { "key": "cmd+d",                "command": "editor.action.deleteLines",
                                     "when": "editorTextFocus && !editorReadonly"}
]